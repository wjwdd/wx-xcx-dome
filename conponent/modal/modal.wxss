/* conponent/model/model.wxss */

.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.popup {
  top: 50%;
  left: 50%;
  z-index: 1000;
  position: fixed;
  max-height: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.modal_box_center {
  transition: all 0.3s;
  opacity: 0;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.modal_box_bottom {
  width: 100%;
  top: auto;
  bottom: -1000rpx;
  right: auto;
  left: 0;
  transition: all 0.3s;
}
/* 动画 */
.modal_box_bottom_ani {
  bottom: 0;
}

.modal_box_center_ani {
  opacity: 1;
}
/* 动画 */
.title {
  padding: 15px;
  text-align: center;
  background-color: gazure;
}

.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn {
  width: 100%;
  margin-top: 65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}

.cancel {
  width: 100%;
